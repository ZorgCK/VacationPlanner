<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<?xdevuiml version="1.0"?>
<?template NONE?>
<?import com.rapidclipse.vacationplanner.entities.Item?>
<?import com.rapidclipse.vacationplanner.entities.Traveller?>
<?import com.rapidclipse.vacationplanner.ui.MainLayout?>
<?import com.vaadin.flow.component.button.Button?>
<?import com.vaadin.flow.component.grid.Grid?>
<?import com.vaadin.flow.component.orderedlayout.HorizontalLayout?>
<?import com.vaadin.flow.component.orderedlayout.VerticalLayout?>
<?import com.vaadin.flow.component.radiobutton.RadioButtonGroup?>
<VerticalLayout xmlns:x="http://xml.xdev-software.com/xdevuiml" x:routeLayout="MainLayout" x:name="PackingView" x:route="package">
    <x:constraints zpos="0" width="100%" height="100%" />
    <RadioButtonGroup x:name="radioButtonGroup">
        <x:typeArguments>
            <typeArgument type="Traveller" />
        </x:typeArguments>
        <x:constraints width="0px" alignment="CENTER" height="0px" flex-grow="0.0" />
        <x:itemLabel type="Property" data="name" />
        <x:event>valueChange.valueChanged</x:event>
    </RadioButtonGroup>
    <Grid x:name="grid">
        <x:typeArguments>
            <typeArgument type="Item" />
        </x:typeArguments>
        <x:constraints width="100%" height="100%" flex-grow="1.0" />
        <x:columns>
            <column property="name" header="Sachen" sortable="true" />
            <column property="amount" header="Anzahl" sortable="true" />
            <column property="renderer" header="Status">
                <renderer type="RenderedComponent" renderedComponent="com.rapidclipse.vacationplanner.ui.column.GenColPackageItem" />
            </column>
        </x:columns>
    </Grid>
    <HorizontalLayout x:name="horizontalLayout" justifyContentMode="com.vaadin.flow.component.orderedlayout.FlexComponent.JustifyContentMode.END">
        <x:constraints width="100%" alignment="START" height="-1px" flex-grow="0.0" />
        <Button x:name="button">
            <x:icon src="com.vaadin.flow.component.icon.VaadinIcon#TRASH" />
            <x:constraints width="0px" height="0px" flex-grow="0.0" />
            <x:event>click.onComponentEvent</x:event>
        </Button>
        <Button x:themeVariants="LUMO_PRIMARY" x:name="button2">
            <x:icon src="com.vaadin.flow.component.icon.VaadinIcon#PLUS" />
            <x:constraints width="0px" height="0px" flex-grow="0.0" />
            <x:event>click.onComponentEvent</x:event>
        </Button>
    </HorizontalLayout>
</VerticalLayout>
